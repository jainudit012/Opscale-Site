{
  "name": "opscale-site",
  "version": "1.0.0",
  "description": "Opscale Website",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "minify-css": "npx postcss ./css/*.css -d dest/css",
    "autoprefix": "npx postcss ./css/*.css autoprefixer -d dest/css/",
    "babel": "npx babel scripts --out-dir dest/scripts --presets=minify",
    "build": "npm run minify-css && npm run babel && cp -r ./dest/* ../website/."
  },
